  </head>
  <body class="<%= @body %>">
    
    <div id="wrapper">
    
      <div id="header">
        <h1>
    			<a href="http://www.panoramaortho.com/index.html"><span>Panorama Orthopedics and Spine Center</span></a>
    		</h1>
    	</div> <!-- #header -->
    	
  		<div id="body">
    		<div id="inner">
    		  <div id="rightcol">
    			  <div id="rightcol-inner">
              <ul id="mainnav">
                <li class="first"><a href="">About Us</a></li>
                <li><a href="">Physicians</a></li>
                <li><a href="">Patient Resources</a></li>
                <li class="first"><a href="">Locations</a></li>
                <li><a href="">Blog</a>
                  <ul id="subnav">
                    <%- menu.each do |link| -%>
                      <%= menu_li link %>
                    <%- end -%>
                    <li>
                      <%= render :partial => "searches/subnav_search" %>
                    </li>
                  </ul>
                </li>
              </ul>
              <%= render :partial => "shared/breadcrumbs" %>
              
              <div id="content">
                
                <%- if global_prefs.demo? -%>
                  <p class="error" style="font-weight: bold;">
                    This is a demonstration site. 
                    Data may be modified or removed without warning.
                  </p>
                <%- end -%>
                <% flash.each do |key, msg| %>
                  <%= content_tag :p, msg, :class => "flash #{key}" %>
                <% end %>     
                
                <%= yield %>
       				  <div class="clear">&nbsp;</div>
       				  
       				  <div id="disclaimer">
                  <p>The information on this site is purely informational and may not pertain to your specific ailment. <strong>It should not be taken in lieu of a doctor's advice!</strong></p>
                </div>

              </div> <!-- #content -->
    		    </div> <!-- #rightcol-inner -->
    		  </div> <!-- #rightcol -->
    		  <div id="sidebar">
    		    <div id="sidebar-inner">
    		      
    		      <%- if logged_in? -%>
    		        <%= render :partial => "shared/logged_in" %>
              <%- else -%>
                <%- if params[:controller] != 'sessions' -%>
                  <%= render :partial => "sessions/form" %>
                <%- end -%>
              <%- end -%>              

              <%= render :partial => "shared/recent_posts" %>
              <%= render :partial => "shared/recent_photos", :object => @photos %>
              <%= render :partial => "shared/past_patients" %>

    	      </div> <!-- #sidebar-inner -->
    			</div> <!-- #sidebar -->
    			
    		</div>
    		<div class="clear">&nbsp;</div>
    		<%= render :partial => "shared/footer" %>
    	</div>
    </div>
    
    <%= render :partial => 'shared/debug' if development? %>
    <%= global_prefs.analytics %>

  </body>
