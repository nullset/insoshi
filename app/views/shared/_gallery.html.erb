<li class="list gallery <%= cycle('first', '', '', :name => "gallery") %>">
  <a href="<%= person_gallery_path(@person, gallery) %>" class="block_link">
    <%= image_tag(gallery.icon_url) %>
    <strong><%= h gallery.title %></strong>
    <small><%= display(truncate(strip_tags(gallery.short_description), :length => 50, :omission => "&#8230;")) %></small>
  </a>
  <div class="links">
    <% if current_person?(gallery.person) %>
      <%= link_to image_tag("icons/picture_edit.png", :class => 'actioner icon'), edit_gallery_path(gallery), :title => 'Edit Gallery' %>
      <%- if @person.galleries.count > 1 -%>
        <%= link_to image_tag("icons/picture_delete.png", :class => 'actioner icon'), gallery, :method => :delete, :confirm => "Are you sure you want to delete this gallery?", :title => "Delete Gallery" %>
      <%- end -%>
    <%- end -%>
  </div>
</li>