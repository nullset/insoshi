<h1>Edit Global Preferences</h1>

<%= error_messages_for :preferences %>

<% form_for :preferences, :url => admin_preference_path(@preferences), :html => { :method => :put, :id => 'admin_preferences' } do |f| %>
  <dl class="pref_list">
    <dt><%= f.label :app_name, 'Application Name' %></dt>
    <dd><%= f.text_field :app_name %></dd>

    <dt><%= f.label :domain, 'Email Domain' %></dt>
    <dd><%= f.text_field :domain %></dd>

    <dt><%= f.label :server_name, 'Server Name' %></dt>
    <dd><%= f.text_field :server_name %>

    <dt><%= f.label :smtp_server, 'SMTP Server' %></dt>
    <dd><%= f.text_field :smtp_server %>

    <dt><%= f.label :email_notifications, 'Send Notices', :class => 'checkbox' %></dt>
    <dd>
      <label for="email_notifications">
        <%= f.check_box :email_notifications %>
        Send email when messages, connection requests, etc., are sent
      </label>
    </dd>

    <dt><%= f.label :demo, 'Demo Site', :class => 'checkbox' %></dt>
    <dd>
      <label for="demo">
        <%= f.check_box :demo %>
        Display a note to explain that this site is just a demonstration
      </label>
    </dd>
    
    <dt><%= f.label :whitelist %></dt>
    <dd>
      <label for="whitelist">
        <%= f.check_box :whitelist %>
        Register new people in a deactivated state until whitelisted
      </label>
    </dd>
    
    <dt><%= f.label :email_verifications, "Verification Emails" %></dt>
    <dd>
      <label for="email_verifications">
        <%= f.check_box :email_verifications %>
        Verify email for new registrations using an activation code
      </label>
    </dd>

    <dt><%= f.label :about %></dt>
    <dd>
      <p><%= formatting_note %></p>
      <%= f.text_area :about, :rows => 10 %>
    </dd>
  
    <dt><%= f.label :analytics %></dt>
    <dd>
      <%= f.text_area :analytics, :rows => 10 %>
      <p class="meta">Code will be inserted just before the &lt;/body&gt; tag</p>
    <dd>
  </dl>

  <div class="buttons">
    <%= f.submit "Update", :class => "button" %>
    <%= link_to "Cancel", admin_preferences_path %>
  </div>
<% end %>
