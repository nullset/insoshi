<li id="comment_<%= comment.id %>" class="<%= cycle('odd', 'even', :name => 'comments') %>">
  <p class="meta">
    <%= person_link comment.commenter %> posted a comment
    <%= time_ago_in_words(comment.created_at) %> ago:
  </p>
  <%= display comment.body %>
  <%- if current_person?(comment.commentable.blog.person) -%>
  <div>
    <%= link_to "delete", blog_post_comment_path(@blog, @post, comment), :method => :delete, :class => "icon comment_delete", :confirm => "Are you sure you want to delete this comment?" %>
  </div>
  <%- end -%>
</li>