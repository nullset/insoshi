<%- form_tag searches_path, :method => :get, :id => "search" do -%>
  <dl>
    <dt><label for="txtSearch">Search Blogs &#8230;</label></dt>
    <dd><%= text_field_tag :q, h(params[:q]), :id => "txtSearch", :class => "txt", :maxlength => 50 %></dd>
  </dl>
  <div class="buttons">
    <%= hidden_field_tag "model", 'BlogPost' %>
    <%= submit_tag "Search", :name => nil, :id => "btnSearch", :class => "button"  %>
  </div>
<%- end -%>
