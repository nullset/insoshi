<h2>Blog comment</h2>

<%= error_messages_for :comment %>

<% form_for :comment, :url => blog_post_comments_path(@blog, @post) do |f| %>
  <h3><%= f.label :body, "Leave a comment" %></h3>
  <dl>
    <dt class="access"><%= f.label :body, "Leave a comment" %></dt>
    <dd><%= f.text_area :body %></dd>
  </dl>
  <div class="buttons">
    <%= submit_tag "Submit", :class => "button" %>
  </div>
<% end %>